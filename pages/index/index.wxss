/**index.wxss**/
.swiperBar{
  width: 100%;
  height: 400rpx;
}
.swiperImg{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  background-color: rgb(242, 242, 242)
}
.top_item{
  height: 98%;
  width: 300rpx;
  margin-right:5rpx;
  background-color: rgb(254, 254, 254);
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.png_image{
  width: 80%;
  height: 60%;
}
.png_text{
  margin-top: 20rpx;
}
.bottom{
  display: flex;
  flex-direction: column;
  height: 500rpx;
  width: 100%;
  background-color: rgb(242, 242, 242);

}
.bottom_top{
  background-color: rgb(254, 254, 254);
  width: calc(100%-509rpx);
  height: 60rpx;
  margin-right: 5rpx;
  margin-left: 5rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.bottom_top_image{
  height: 40rpx;
  width: 40rpx;
  margin-left: 50rpx;
  margin-right: 30rpx;
}
.bottom_top_text{
  font-size: 30rpx;
}
.bottom_items{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: rgb(254, 254, 254);
  width: 100%;
  margin-top: 10rpx;
  padding-top: 10rpx;
}
.bottom_items_item{
  display: flex;
  flex-direction: column;
  align-items: center;

}
.bottom_items_item_image{
  margin: 10rpx;
  width: 230rpx;
  height: 150rpx;
}
.bottom_items_item_text{
  font-size: 30rpx;
  color: rgb(148,148,148);
}